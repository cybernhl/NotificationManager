<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppItemContainer">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppIcon">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubtitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/subtitleText</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
